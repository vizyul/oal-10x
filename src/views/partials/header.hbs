<header class="global-toolbar">
  <div class="container">
    <div class="toolbar-content">
      <!-- Logo and Brand -->
      <div class="toolbar-brand">
        <a href="/" class="brand-link">
          <!-- <img src="/images/logo.png" alt="AmplifyContent.ai Logo" class="brand-logo"> -->
          <img src="/images/amplify_logo_2.svg" width="200" alt="AmplifyContent.ai Logo" class="brand-logo">
          <span class="brand-text">AmplifyContent.<span class="brand-ai">ai</span></span>
        </a>
      </div>
      
      <!-- Navigation Links -->
      <nav class="toolbar-nav">
        <ul class="nav-links">
          <li><a href="/" class="nav-link">Home</a></li>
          <li><a href="/subscription/upgrade" class="nav-link">Pricing</a></li>
          <!-- Always show Contact Us -->
          <li><a href="/contact" class="nav-link">Contact Us</a></li>
          
          {{#unless user}}
          <!-- Non-authenticated Navigation -->
          <li><a href="/auth/sign-up" class="nav-link btn-get-started">Get Started</a></li>
          <li><a href="/auth/sign-in" class="nav-link btn-login">Sign In</a></li>
          {{/unless}}
          {{#if user}}
          <!-- Authenticated Navigation -->
          <li>
            <a href="/auth/logout" class="nav-link btn-logout">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M16 17L21 12L16 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M21 12H9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Sign Out</span>
            </a>
          </li>
          {{/if}}
        </ul>
        
        <!-- Mobile Menu Toggle -->
        <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle mobile menu">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
      </nav>
    </div>
  </div>
</header>


<script>
// Mobile menu toggle functionality
document.addEventListener('DOMContentLoaded', function() {
  const mobileMenuToggle = document.getElementById('mobileMenuToggle');
  const navLinks = document.querySelector('.nav-links');
  const sidebar = document.getElementById('app-sidebar');

  // Check if user is authenticated (has sidebar)
  const isAuthenticated = !!sidebar;

  // Flag to prevent rapid multiple toggles (touch device issue)
  let isTogglingMenu = false;

  if (mobileMenuToggle) {
    mobileMenuToggle.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();

      // Prevent rapid multiple toggles
      if (isTogglingMenu) return;
      isTogglingMenu = true;

      // Reset flag after a short delay
      setTimeout(function() {
        isTogglingMenu = false;
      }, 300);

      // For authenticated users, open sidebar on mobile
      if (isAuthenticated && window.innerWidth <= 768 && window.sidebarFunctions) {
        window.sidebarFunctions.toggle();
        return;
      }

      // For non-authenticated users, toggle nav links
      if (navLinks) {
        navLinks.classList.toggle('active');

        // Animate hamburger lines
        const lines = mobileMenuToggle.querySelectorAll('.hamburger-line');
        if (navLinks.classList.contains('active')) {
          lines[0].style.transform = 'rotate(45deg) translate(5px, 5px)';
          lines[1].style.opacity = '0';
          lines[2].style.transform = 'rotate(-45deg) translate(7px, -6px)';
        } else {
          lines[0].style.transform = 'rotate(0) translate(0, 0)';
          lines[1].style.opacity = '1';
          lines[2].style.transform = 'rotate(0) translate(0, 0)';
        }
      }
    });
  }

  // Close mobile menu when clicking outside (non-authenticated only)
  document.addEventListener('click', function(event) {
    if (isTogglingMenu) return; // Don't close while toggling

    setTimeout(function() {
      if (mobileMenuToggle && navLinks && !sidebar &&
          !mobileMenuToggle.contains(event.target) &&
          !navLinks.contains(event.target)) {
        navLinks.classList.remove('active');
        const lines = mobileMenuToggle.querySelectorAll('.hamburger-line');
        lines[0].style.transform = 'rotate(0) translate(0, 0)';
        lines[1].style.opacity = '1';
        lines[2].style.transform = 'rotate(0) translate(0, 0)';
      }
    }, 10);
  });
});
</script>