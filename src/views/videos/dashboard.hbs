  calculateProgress(video) {
    let completed = 0;
    let total = 0;

    // Only count content types from video.content - this is the authoritative source
    // We do NOT count video.transcript separately to avoid inconsistent progress updates
    if (video.content) {
      Object.entries(video.content).forEach(([key, contentData]) => {
        // Skip transcript_text - it's extracted (not generated) and its status is tracked
        // via video.transcript, not video.content. It stays 'pending' in video.content
        // which would cause progress to never reach 100%
        if (key === 'transcript_text') {
          return;
        }

        // Skip any image-related entries (ebook images are part of ebook_text generation)
        if (key.includes('_image') || key.startsWith('image_')) {
          return;
        }

        if (contentData && contentData.status !== 'skipped') {
          total++;
          // Content is 'done' if completed or failed (processing finished)
          if (contentData.status === 'completed' || contentData.status === 'failed') {
            completed++;
          }
        }
      });
    }

    // Ensure we never divide by zero
    total = Math.max(total, 1);

    // Cache the highest progress to prevent backward jumps from out-of-order updates
    // Once progress reaches a certain level, it should never decrease
    const cacheKey = video.videoId;
    const cached = this.progressCache.get(cacheKey) || { completed: 0, total: total };

    // Update cache if we have more completed items (progress is increasing)
    if (completed > cached.completed) {
      this.progressCache.set(cacheKey, { completed, total });
    } else {
      // Use cached higher value to prevent progress from decreasing
      completed = cached.completed;
    }

    // If video is marked as completed by server, ensure 100% progress
    if (video.completed) {
      completed = total;
