  calculateProgress(video) {
    if (!this.contentTypesLoaded || !this.contentTypes) {
      return { completed: 0, total: 1 };
    }

    let completed = 0;
    let total = 0;
    
    // Check each content type (including transcript), but only count non-skipped ones
    this.contentTypes.forEach(ct => {
      if (ct.isTranscript) {
        total++;
        if (video.transcript?.status === 'completed') completed++;
      } else {
        const contentData = video.content[ct.key];
        if (contentData && contentData.status !== 'skipped') {
          total++;
          if (contentData.status === 'completed') completed++;
        }
      }
    });
    
    return { completed, total };
  }

