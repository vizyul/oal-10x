function setupSmartTooltips() {
  const contentIcons = document.querySelectorAll('.content-icon-wrapper');
  
  contentIcons.forEach(iconWrapper => {
    const tooltip = iconWrapper.querySelector('.content-tooltip');
    if (!tooltip) return;
    
    iconWrapper.addEventListener('mouseenter', () => {
      // Reset any previous positioning classes
      tooltip.classList.remove('tooltip-left', 'tooltip-right', 'tooltip-center');
      
      // Get the video card container
      const videoCard = iconWrapper.closest('.video-card');
      if (!videoCard) return;
      
      // Get positions
      const cardRect = videoCard.getBoundingClientRect();
      const iconRect = iconWrapper.getBoundingClientRect();
      
      // Calculate tooltip width (approximate)
      const tooltipWidth = 140; // max-width from CSS
      
      // Calculate potential left and right positions
      const iconCenter = iconRect.left + (iconRect.width / 2) - cardRect.left;
      const tooltipHalfWidth = tooltipWidth / 2;
      
      // Check if tooltip would extend beyond card boundaries
      const wouldExtendLeft = iconCenter - tooltipHalfWidth < 8; // 8px padding
      const wouldExtendRight = iconCenter + tooltipHalfWidth > (cardRect.width - 8); // 8px padding
      
      if (wouldExtendLeft) {
        tooltip.classList.add('tooltip-left');
      } else if (wouldExtendRight) {
        tooltip.classList.add('tooltip-right');
      } else {
        tooltip.classList.add('tooltip-center');
      }
    });
  });
}

