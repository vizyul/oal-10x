/* CSS Variables for maintainability and theming */
:root {
    --primary-shadow: rgba(0, 0, 0, 0.8);
    --secondary-shadow: rgba(0, 0, 0, 0.4);
    --highlight-color: rgba(255, 255, 255, 0.1);
    --accent-glow: rgba(255, 255, 255, 0.6);
    --content-bg: #f8f9fa;
    --text-color: #2c3e50;
    --accent-color: #10b981;
}



/* Ebook styles */
.ebook-wrapper {
  --primary-shadow: rgba(0, 0, 0, 0.8);
  --secondary-shadow: rgba(0, 0, 0, 0.4);
  --highlight-color: rgba(255, 255, 255, 0.1);
  --accent-glow: rgba(255, 255, 255, 0.6);
  --content-bg: #ffffff;
  --text-color: #1f2937;
  --accent-color: #10b981;
}

/* Title page container */
.title-page {
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: #1f2937;
  min-height: 60vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: left;
  color: #ffffff;
  padding: 40px;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  border-radius: 12px;
  margin-bottom: 2rem;
}

/* Full-page overlay for better text contrast */
.title-page::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    360deg,
    rgba(0, 0, 0, 0.5) 0%,
    rgba(0, 0, 0, 0.3) 50%,
    rgba(0, 0, 0, 0.5) 100%
  );
  backdrop-filter: blur(2px);
  -webkit-backdrop-filter: blur(2px);
  pointer-events: none;
  z-index: 1;
}

/* Ebook title - hero element */
.ebook-title {
  font-size: clamp(2.5vw, 3vw, 4vw) !important;
  font-weight: 900;
  margin-bottom: 1rem;
  margin-left: 20px;
  position: relative;
  z-index: 2;
  color: var(--accent-color) !important;
  text-shadow:
    0 3px 6px var(--primary-shadow),
    0 6px 12px var(--primary-shadow),
    0 12px 24px var(--secondary-shadow);
  -webkit-text-stroke: 1px rgba(0, 0, 0, 0.4);
  filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.3));
  animation: fadeInUp 0.8s ease-out;
}

/* Ebook subtitle */
.ebook-subtitle {
  font-size: clamp(1rem, 2.5vw, 1.5rem);
  font-weight: 500;
  position: relative;
  z-index: 2;
  margin-left: 20px;
  color: #10b981;
  text-shadow:
    0 2px 4px var(--primary-shadow),
    0 4px 8px var(--primary-shadow);
  -webkit-text-stroke: 0.5px rgba(0, 0, 0, 0.3);
  filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.2));
  animation: fadeInUp 0.8s ease-out 0.2s backwards;
}

/* Content section with split layout */
.content-section {
  display: flex;
  align-items: center;
  min-height: 50vh;
  background-color: var(--content-bg);
  padding: 3rem 2rem;
  box-sizing: border-box;
  gap: 2rem;
  position: relative;
  border-bottom: 1px solid #e5e7eb;
}

.content-section:last-child {
  border-bottom: none;
}

/* Bullet points container */
.bullet-container {
  flex: 1;
  max-width: 50%;
  padding: 1.5rem;
  animation: slideInLeft 0.8s ease-out;
}

.bullet-container h2 {
  font-size: clamp(1.25rem, 3vw, 2rem);
  font-weight: 700;
  color: var(--text-color);
  margin-bottom: 1.5rem;
  line-height: 1.2;
  position: relative;
  padding-bottom: 0.75rem;
}

/* Decorative underline for heading */
.bullet-container h2::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 60px;
  height: 3px;
  background: linear-gradient(90deg, var(--accent-color), transparent);
  border-radius: 2px;
}

/* Bullet list styling */
.ebook-wrapper .bullet-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.ebook-wrapper .bullet-list li {
  font-size: clamp(0.875rem, 1.5vw, 1.125rem);
  line-height: 1.8;
  color: var(--text-color);
  margin-bottom: 1rem;
  padding-left: 2rem;
  position: relative;
  transition: transform 0.3s ease, color 0.3s ease;
}

/* Custom bullet styling */
.ebook-wrapper .bullet-list li::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0.6em;
  width: 10px;
  height: 10px;
  background: var(--accent-color);
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(52, 152, 219, 0.4);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Hover effect on list items */
.ebook-wrapper .bullet-list li:hover {
  transform: translateX(8px);
  color: var(--accent-color);
}

.ebook-wrapper .bullet-list li:hover::before {
  transform: scale(1.3);
  box-shadow: 0 4px 12px rgba(52, 152, 219, 0.6);
}

/* Image container */
.image-container {
  flex: 1;
  max-width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: slideInRight 0.8s ease-out;
}

.image-container img {
  width: 100%;
  height: auto;
  max-height: 60vh;
  object-fit: cover;
  border-radius: 12px;
  box-shadow:
    0 10px 30px rgba(0, 0, 0, 0.15),
    0 20px 60px rgba(0, 0, 0, 0.1);
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1),
              box-shadow 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Image hover effect */
.image-container img:hover {
  transform: scale(1.03) translateY(-8px);
  box-shadow:
    0 20px 40px rgba(0, 0, 0, 0.2),
    0 30px 80px rgba(0, 0, 0, 0.15);
}

/* Animation keyframes */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Responsive adjustments for ebook */
@media (max-width: 1024px) {
  .content-section {
    flex-direction: column;
    padding: 2rem 1.5rem;
  }

  .bullet-container,
  .image-container {
    max-width: 100%;
    flex: none;
    width: 100%;
  }

  .bullet-container {
    padding: 1rem;
  }

  .image-container img {
    max-height: 50vh;
