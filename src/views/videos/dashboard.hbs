  formatEbookContent(content) {
    if (!content) return '';

    // Helper function to process text: convert **bold** and remove timecodes
    const processText = (text) => {
      return text
        // Remove timecode references like [00:00:00], (1:23:45), [12:34], etc.
        .replace(/[\[\(]\d{1,2}:\d{2}(?::\d{2})?[\]\)]/g, '')
        // Convert **bold** to <strong>
        .replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>')
        // Clean up any double spaces left from timecode removal
        .replace(/\s{2,}/g, ' ')
        .trim();
    };

    let html = '<div class="ebook-wrapper">';

    // Extract title and subtitle from the beginning
    const titleMatch = content.match(/^#\s+(.+?)(?:\n|$)/m);
    const title = titleMatch ? processText(titleMatch[1]) : 'Untitled Ebook';

    // Find cover image (first image after title)
    const coverImageMatch = content.match(/!\[([^\]]*)\]\(([^\)]+)\)/);
    const coverImage = coverImageMatch ? coverImageMatch[2] : '';

    // Extract subtitle (text between title and first section or image)
    let subtitle = '';
    if (titleMatch) {
      const afterTitle = content.substring(titleMatch.index + titleMatch[0].length);
      const subtitleMatch = afterTitle.match(/^([^#\[!]+?)(?=\n\n|\n#|\n\[|!\[)/);
      if (subtitleMatch && subtitleMatch[1].trim()) {
        subtitle = processText(subtitleMatch[1]);
      }
    }

    // Create title page
    html += `
      <div class="title-page"${coverImage ? ` style="background-image: url('${coverImage}')"` : ''}>
        <h1 class="ebook-title">${title}</h1>
        ${subtitle ? `<p class="ebook-subtitle">${subtitle}</p>` : ''}
      </div>
    `;

    // Split content into sections by ## headers
    const sections = content.split(/(?=^##\s)/m).slice(1); // Skip content before first ##

    sections.forEach((section, index) => {
      // Extract section title
      const sectionTitleMatch = section.match(/^##\s+(.+?)(?:\n|$)/m);
      const sectionTitle = sectionTitleMatch ? processText(sectionTitleMatch[1]) : '';

      // Remove layout labels from content
      let sectionContent = section
        .replace(/^##\s+.+?\n/, '') // Remove section title
        .replace(/\*\*Layout [ABC][^*]*\*\*:?\s*\n?/gi, ''); // Remove layout labels

      // Extract bullets and process each one
      const bullets = [];
      const bulletMatches = sectionContent.matchAll(/^[‚Ä¢\-\*]\s+(.+?)$/gm);
      for (const match of bulletMatches) {
        bullets.push(processText(match[1]));
      }

      // Extract image
      const imageMatch = sectionContent.match(/!\[([^\]]*)\]\(([^\)]+)\)/);
      const image = imageMatch ? imageMatch[2] : '';
      const imageAlt = imageMatch ? imageMatch[1] : sectionTitle;

      // Determine layout based on content patterns or position
      let layoutType = 'B'; // Default to bullets only
      if (image && bullets.length > 0) {
        // Check for explicit layout indicators in original section
        if (section.match(/Layout\s*A|Image\s*Right/i)) {
          layoutType = 'A';
        } else if (section.match(/Layout\s*C|Image\s*Left/i)) {
          layoutType = 'C';
        } else {
          // Alternate layouts based on section index
          layoutType = index % 2 === 0 ? 'A' : 'C';
        }
      }

      // Build section HTML
      html += '<section class="content-section">';

      if (layoutType === 'A' && image) {
        // Bullets left, image right
        html += `
          <div class="bullet-container">
            ${sectionTitle ? `<h2>${sectionTitle}</h2>` : ''}
            ${bullets.length > 0 ? `
              <ul class="bullet-list">
                ${bullets.map(b => `<li>${b}</li>`).join('\n                ')}
              </ul>
            ` : ''}
          </div>
          <div class="image-container">
            <img src="${image}" alt="${imageAlt}">
          </div>
        `;
      } else if (layoutType === 'C' && image) {
        // Image left, bullets right
        html += `
          <div class="image-container">
            <img src="${image}" alt="${imageAlt}">
          </div>
          <div class="bullet-container">
            ${sectionTitle ? `<h2>${sectionTitle}</h2>` : ''}
            ${bullets.length > 0 ? `
              <ul class="bullet-list">
                ${bullets.map(b => `<li>${b}</li>`).join('\n                ')}
              </ul>
            ` : ''}
          </div>
        `;
      } else {
        // Layout B - bullets only (full width)
        html += `
          <div class="bullet-container" style="max-width: 100%;">
            ${sectionTitle ? `<h2>${sectionTitle}</h2>` : ''}
            ${bullets.length > 0 ? `
              <ul class="bullet-list">
                ${bullets.map(b => `<li>${b}</li>`).join('\n                ')}
              </ul>
            ` : ''}
          </div>
        `;
      }

      html += '</section>';
    });

    html += '</div>';
    return html;
  }

  markdownToHtml(markdown) {
    if (!markdown) return '';

    // Convert markdown to HTML
    let html = markdown;

    // Process tables (before other transformations)
    html = this.processMarkdownTables(html);

    html = html
      // Horizontal rules (must be before headers)
      .replace(/^---+$/gim, '<hr>')
      .replace(/^\*\*\*+$/gim, '<hr>')
      .replace(/^___+$/gim, '<hr>')

      // Headers (order matters - most specific first)
      .replace(/^#### (.*$)/gim, '<h4>$1</h4>')
      .replace(/^### (.*$)/gim, '<h3>$1</h3>')
      .replace(/^## (.*$)/gim, '<h2>$1</h2>')
      .replace(/^# (.*$)/gim, '<h1>$1</h1>')

      // Bold and italic
      .replace(/\*\*\*(.*?)\*\*\*/g, '<strong><em>$1</em></strong>')
      .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
      .replace(/\*(.*?)\*/g, '<em>$1</em>')

      // Code blocks
      .replace(/```([^`]*?)```/g, '<pre><code>$1</code></pre>')
      .replace(/`([^`]*?)`/g, '<code>$1</code>')

      // Images (must be before links to properly handle ![alt](url) syntax)
      .replace(/!\[([^\]]*)\]\(([^\)]+)\)/g, '<img src="$2" alt="$1" style="max-width: 100%; height: auto; margin: 1em 0; border-radius: 8px;">')

      // Links
      .replace(/\[([^\]]+)\]\(([^\)]+)\)/g, '<a href="$2" target="_blank">$1</a>')

      // Lists
      .replace(/^\* (.*$)/gim, '<li>$1</li>')
      .replace(/^\d+\. (.*$)/gim, '<li>$1</li>')

      // Line breaks and paragraphs
      .replace(/\n\n/g, '</p><p>')
      .replace(/\n/g, '<br>');

    // Wrap in paragraphs if not already wrapped
    if (!html.startsWith('<h') && !html.startsWith('<p') && !html.startsWith('<li') && !html.startsWith('<pre') && !html.startsWith('<table') && !html.startsWith('<hr')) {
      html = '<p>' + html + '</p>';
    }

    // Wrap consecutive <li> elements in <ul>
    html = html.replace(/(<li>.*?<\/li>)(?=\s*<li>|$)/gs, function(match) {
      return match;
    });
    html = html.replace(/(<li>.*?<\/li>)+/gs, '<ul>$&</ul>');

    return html;
  }

  processMarkdownTables(markdown) {
    // Match markdown tables with surrounding whitespace
    const tableRegex = /\n*(\|.+\|)\n(\|[-:| ]+\|)\n((?:\|.+\|\n?)+)\n*/g;

    return markdown.replace(tableRegex, (match, headerRow, separatorRow, bodyRows) => {
      // Parse header
      const headers = headerRow.split('|').filter(cell => cell.trim() !== '').map(cell => cell.trim());

      // Parse alignment from separator row
      const alignments = separatorRow.split('|').filter(cell => cell.trim() !== '').map(cell => {
        const trimmed = cell.trim();
        if (trimmed.startsWith(':') && trimmed.endsWith(':')) return 'center';
        if (trimmed.endsWith(':')) return 'right';
        return 'left';
      });

      // Parse body rows
      const rows = bodyRows.trim().split('\n').map(row =>
        row.split('|').filter(cell => cell.trim() !== '').map(cell => cell.trim())
      );

      // Build HTML table
      let tableHtml = '<table class="markdown-table"><thead><tr>';
      headers.forEach((header, i) => {
        const align = alignments[i] || 'left';
        tableHtml += `<th style="text-align: ${align}">${header}</th>`;
      });
      tableHtml += '</tr></thead><tbody>';

      rows.forEach(row => {
        tableHtml += '<tr>';
        row.forEach((cell, i) => {
          const align = alignments[i] || 'left';
          tableHtml += `<td style="text-align: ${align}">${cell}</td>`;
        });
        tableHtml += '</tr>';
      });

      tableHtml += '</tbody></table>';
      return tableHtml;
    });
  }

