<div class="admin-form-page">
  <div class="form-header">
    <h1>‚úèÔ∏è Edit Content Type</h1>
    <p class="subtitle">Modify the settings for "{{contentType.label}}"</p>
  </div>

  <div class="form-container">
    <form method="POST" action="/admin/content-types/{{contentType.id}}?_method=PUT" class="content-type-form">
      {{#if errors}}
        <div class="alert alert-error">
          <h4>‚ö†Ô∏è Please fix the following errors:</h4>
          <ul>
            {{#each errors}}
              <li>{{this.msg}}</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}

      {{#if error}}
        <div class="alert alert-error">
          <p>{{error}}</p>
        </div>
      {{/if}}

      <div class="form-section">
        <h3>Basic Information</h3>
        
        <div class="form-row">
          <div class="form-group">
            <label for="key">Content Type Key</label>
            <input type="text" id="key" name="key" 
                   value="{{contentType.key}}" 
                   class="form-control" readonly disabled>
            <small class="form-help">
              The key cannot be changed after creation to maintain data integrity.
            </small>
          </div>
          
          <div class="form-group">
            <label for="label" class="required">Display Label</label>
            <input type="text" id="label" name="label" 
                   value="{{#if formData.label}}{{formData.label}}{{else}}{{contentType.label}}{{/if}}" 
                   placeholder="e.g., Article Content, Podcast Script"
                   class="form-control" required>
            <small class="form-help">
              Human-readable name shown in the interface.
            </small>
          </div>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" 
                    rows="3" 
                    placeholder="Brief description of what this content type is used for..."
                    class="form-control">{{#if formData.description}}{{formData.description}}{{else}}{{contentType.description}}{{/if}}</textarea>
          <small class="form-help">
            Optional description to help users understand this content type.
          </small>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="icon" class="required">Icon</label>
            <input type="text" id="icon" name="icon" 
                   value="{{#if formData.icon}}{{formData.icon}}{{else}}{{contentType.icon}}{{/if}}" 
                   placeholder="üìù"
                   maxlength="2"
                   class="form-control icon-input" required>
            <small class="form-help">
              Single emoji character that represents this content type.
            </small>
          </div>
          
          <div class="form-group">
            <label for="display_order" class="required">Display Order</label>
            <input type="number" id="display_order" name="display_order" 
                   value="{{#if formData.display_order}}{{formData.display_order}}{{else}}{{contentType.display_order}}{{/if}}" 
                   min="1" max="999"
                   class="form-control" required>
            <small class="form-help">
              Lower numbers appear first in lists.
            </small>
          </div>
        </div>
      </div>

      <div class="form-section">
        <h3>Content Type Features</h3>
        
        <div class="form-row">
          <div class="form-group">
            <div class="checkbox-group">
              <input type="checkbox" id="requires_ai" name="requires_ai" 
                     {{#if formData.requires_ai}}
                       {{#if formData.requires_ai}}checked{{/if}}
                     {{else}}
                       {{#if contentType.requires_ai}}checked{{/if}}
                     {{/if}}>
              <label for="requires_ai">
                <strong>ü§ñ Requires AI Processing</strong>
                <span class="checkbox-help">This content type uses AI for generation or processing</span>
              </label>
            </div>
          </div>
          
          <div class="form-group">
            <div class="checkbox-group">
              <input type="checkbox" id="has_url_field" name="has_url_field" 
                     {{#if formData.has_url_field}}
                       {{#if formData.has_url_field}}checked{{/if}}
                     {{else}}
                       {{#if contentType.has_url_field}}checked{{/if}}
                     {{/if}}>
              <label for="has_url_field">
                <strong>üîó Has URL Field</strong>
                <span class="checkbox-help">This content type includes a URL field for external links</span>
              </label>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="checkbox-group">
            <input type="checkbox" id="is_active" name="is_active" 
                   {{#if formData.is_active}}
                     {{#unless (eq formData.is_active false)}}checked{{/unless}}
                   {{else}}
                     {{#if contentType.is_active}}checked{{/if}}
                   {{/if}}>
            <label for="is_active">
              <strong>‚úÖ Active</strong>
              <span class="checkbox-help">Make this content type available for use</span>
            </label>
          </div>
        </div>
      </div>

      <div class="form-section" id="ai-prompts-section">
        <h3>ü§ñ AI Prompt Configuration</h3>
        <div class="section-help">
          <p>Configure AI prompts for this content type. You can add prompts for different AI providers.</p>
        </div>
        
        <div class="prompts-container" id="prompts-container">
          <!-- Existing AI Prompts will be loaded here -->
          {{#each existingPrompts}}
          <div class="prompt-card">
            <div class="prompt-card-header">
              <h4 class="prompt-card-title">{{name}} ({{ai_provider}})</h4>
              <button type="button" class="remove-prompt-btn" onclick="removePromptCard(this)" data-prompt-id="{{id}}">
                üóëÔ∏è Remove
              </button>
            </div>
            
            <div class="prompt-form-row">
              <div class="prompt-form-group">
                <label>Prompt Name <span style="color: #dc3545;">*</span></label>
                <input type="text" name="existing_prompts[{{id}}][name]" 
                       value="{{name}}" 
                       placeholder="e.g., Blog Content Generator"
                       required>
              </div>
              <div class="prompt-form-group">
                <label>AI Provider <span style="color: #dc3545;">*</span></label>
                <select name="existing_prompts[{{id}}][ai_provider]" required>
                  <option value="gemini" {{#if (eq ai_provider 'gemini')}}selected{{/if}}>GEMINI</option>
                  <option value="openai" {{#if (eq ai_provider 'openai')}}selected{{/if}}>OPENAI</option>
                  <option value="claude" {{#if (eq ai_provider 'claude')}}selected{{/if}}>CLAUDE</option>
                </select>
              </div>
              <div class="prompt-form-group">
                <label>Temperature</label>
                <input type="number" name="existing_prompts[{{id}}][temperature]" 
                       value="{{temperature}}" 
                       min="0" max="2" step="0.1"
                       placeholder="0.7">
              </div>
            </div>
            
            <div class="prompt-form-row">
              <div class="prompt-form-group">
                <label>Description</label>
                <input type="text" name="existing_prompts[{{id}}][description]" 
                       value="{{description}}" 
                       placeholder="Brief description of this prompt">
              </div>
              <div class="prompt-form-group">
                <label>Max Tokens</label>
                <input type="number" name="existing_prompts[{{id}}][max_tokens]" 
                       value="{{max_tokens}}" 
                       min="100" max="8000"
                       placeholder="2000">
              </div>
              <div class="prompt-form-group">
                <label>Status</label>
                <select name="existing_prompts[{{id}}][is_active]">
                  <option value="true" {{#if is_active}}selected{{/if}}>Active</option>
                  <option value="false" {{#unless is_active}}selected{{/unless}}>Inactive</option>
                </select>
              </div>
            </div>
            
            <div class="prompt-textarea-group">
              <div class="prompt-textarea-row">
                <div class="prompt-form-group">
                  <label>User Prompt <span style="color: #dc3545;">*</span></label>
                  <textarea name="existing_prompts[{{id}}][prompt_text]" 
                            placeholder="Enter the main prompt that will be sent to the AI..." 
                            required>{{prompt_text}}</textarea>
                </div>
                <div class="prompt-form-group">
                  <label>System Message</label>
                  <textarea name="existing_prompts[{{id}}][system_message]" 
                            placeholder="Enter system instructions for the AI...">{{system_message}}</textarea>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
        
        <button type="button" id="add-prompt-btn" class="btn btn-outline-primary">
          ‚ûï Add AI Prompt
        </button>
      </div>

      <div class="form-actions">
        <a href="/admin/content-types/{{contentType.id}}" class="btn btn-secondary">
          ‚Üê Cancel
        </a>
        <button type="submit" class="btn btn-primary">
          ‚úÖ Update Content Type
        </button>
      </div>
    </form>
  </div>
</div>

<style>
