<div class="content-type-detail-page">
  <div class="detail-header">
    <div class="header-content">
      <div class="title-section">
        <span class="content-type-icon">{{contentType.icon}}</span>
        <div>
          <h1>{{contentType.label}}</h1>
          <p class="subtitle">Content Type Details</p>
        </div>
      </div>
      <div class="header-actions">
        <a href="/admin/content-types/{{contentType.id}}/edit" class="btn btn-primary">
          ‚úèÔ∏è Edit Content Type
        </a>
        <a href="/admin/content-types/{{contentType.id}}/prompts" class="btn btn-secondary">
          üß† Manage AI Prompts
        </a>
      </div>
    </div>
  </div>

  <div class="detail-container">
    <!-- Basic Information Section -->
    <div class="detail-section">
      <h2>Basic Information</h2>
      <div class="info-grid">
        <div class="info-item">
          <label>Content Type Key</label>
          <div class="info-value">
            <code>{{contentType.key}}</code>
          </div>
        </div>
        
        <div class="info-item">
          <label>Display Label</label>
          <div class="info-value">{{contentType.label}}</div>
        </div>
        
        <div class="info-item">
          <label>Icon</label>
          <div class="info-value icon-display">{{contentType.icon}}</div>
        </div>
        
        <div class="info-item">
          <label>Display Order</label>
          <div class="info-value">{{contentType.display_order}}</div>
        </div>
        
        <div class="info-item full-width">
          <label>Description</label>
          <div class="info-value">
            {{#if contentType.description}}
              {{contentType.description}}
            {{else}}
              <em class="no-description">No description provided</em>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="detail-section">
      <h2>Content Type Features</h2>
      <div class="features-grid">
        <div class="feature-item {{#if contentType.requires_ai}}active{{else}}inactive{{/if}}">
          <div class="feature-icon">
            {{#if contentType.requires_ai}}‚úÖ{{else}}‚ùå{{/if}}
          </div>
          <div class="feature-content">
            <h3>AI Processing</h3>
            <p>{{#if contentType.requires_ai}}This content type uses AI for generation or processing{{else}}This content type does not require AI processing{{/if}}</p>
          </div>
        </div>
        
        <div class="feature-item {{#if contentType.has_url_field}}active{{else}}inactive{{/if}}">
          <div class="feature-icon">
            {{#if contentType.has_url_field}}‚úÖ{{else}}‚ùå{{/if}}
          </div>
          <div class="feature-content">
            <h3>URL Field</h3>
            <p>{{#if contentType.has_url_field}}This content type includes a URL field for external links{{else}}This content type does not include a URL field{{/if}}</p>
          </div>
        </div>
        
        <div class="feature-item {{#if contentType.is_active}}active{{else}}inactive{{/if}}">
          <div class="feature-icon">
            {{#if contentType.is_active}}‚úÖ{{else}}‚ùå{{/if}}
          </div>
          <div class="feature-content">
            <h3>Status</h3>
            <p>{{#if contentType.is_active}}This content type is currently active and available for use{{else}}This content type is currently inactive{{/if}}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- AI Prompts Section -->
    <div class="detail-section">
      <div class="section-header">
        <h2>AI Prompts ({{prompts.length}})</h2>
        <a href="/admin/content-types/{{contentType.id}}/prompts" class="btn btn-outline">
          ‚ûï Add New Prompt
        </a>
      </div>
      
      {{#if prompts.length}}
        <div class="prompts-list">
          {{#each prompts}}
          <div class="prompt-card {{#unless is_active}}inactive{{/unless}}">
            <div class="prompt-header">
              <div class="prompt-title">
                <h3>{{name}}</h3>
                <span class="provider-badge provider-{{ai_provider}}">{{ai_provider}}</span>
              </div>
              <div class="prompt-status">
                {{#if is_active}}
                  <span class="status-active">Active</span>
                {{else}}
                  <span class="status-inactive">Inactive</span>
                {{/if}}
              </div>
            </div>
            
            {{#if description}}
            <div class="prompt-description">
              {{description}}
            </div>
            {{/if}}
            
            <div class="prompt-meta">
              <div class="meta-item">
                <strong>Temperature:</strong> {{temperature}}
              </div>
              <div class="meta-item">
                <strong>Max Tokens:</strong> {{max_tokens}}
              </div>
              {{#if system_message}}
              <div class="meta-item">
                <strong>Has System Message:</strong> Yes
              </div>
              {{/if}}
            </div>
            
            <div class="prompt-preview">
              <strong>Prompt:</strong>
              <div class="prompt-text">
                {{#if (gt prompt_text.length 200)}}
                  {{substring prompt_text 0 200}}...
                {{else}}
                  {{prompt_text}}
                {{/if}}
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty-state">
          <div class="empty-icon">ü§ñ</div>
          <h3>No AI Prompts Configured</h3>
          <p>This content type doesn't have any AI prompts set up yet.</p>
          <a href="/admin/content-types/{{contentType.id}}/prompts" class="btn btn-primary">
            ‚ûï Add First Prompt
          </a>
        </div>
      {{/if}}
    </div>

    <!-- Navigation Section -->
    <div class="detail-section">
      <div class="navigation-actions">
        <a href="/admin/content-types" class="btn btn-outline">
          ‚Üê Back to Content Types
        </a>
        <a href="/admin/content-types/manage" class="btn btn-outline">
          üìã Manage All Types
        </a>
      </div>
    </div>
  </div>
</div>

