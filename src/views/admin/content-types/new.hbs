<script>
// Auto-generate key from label
document.getElementById('label').addEventListener('input', function(e) {
  const keyInput = document.getElementById('key');
  if (!keyInput.value || keyInput.dataset.autoGenerated !== 'false') {
    const label = e.target.value;
    const key = label
      .toLowerCase()
      .replace(/[^a-z0-9\s]/g, '')
      .replace(/\s+/g, '_')
      .replace(/_{2,}/g, '_')
      .replace(/^_|_$/g, '');
    
    keyInput.value = key;
    keyInput.dataset.autoGenerated = 'true';
  }
});

// Stop auto-generation if user manually edits key
document.getElementById('key').addEventListener('input', function(e) {
  e.target.dataset.autoGenerated = 'false';
});

// Icon preview and validation
document.getElementById('icon').addEventListener('input', function(e) {
  const value = e.target.value;
  // Basic emoji validation - should be 1-2 characters and likely an emoji
  if (value.length > 2) {
    e.target.value = value.slice(0, 2);
  }
});

// AI Prompts Management
let promptCounter = 0;
const availableProviders = ['gemini', 'openai', 'claude'];

function createPromptCard(promptData = {}) {
  const promptId = promptCounter++;
  
  const card = document.createElement('div');
  card.className = 'prompt-card';
  card.innerHTML = `
    <div class="prompt-card-header">
      <h4 class="prompt-card-title">AI Prompt #${promptId + 1}</h4>
      <button type="button" class="remove-prompt-btn" onclick="removePromptCard(this)">
        üóëÔ∏è Remove
      </button>
    </div>
    
    <div class="prompt-form-row">
      <div class="prompt-form-group">
        <label>Prompt Name <span style="color: #dc3545;">*</span></label>
        <input type="text" name="prompts[${promptId}][name]" 
               value="${promptData.name || ''}" 
               placeholder="e.g., Blog Content Generator"
               required>
      </div>
      <div class="prompt-form-group">
        <label>AI Provider <span style="color: #dc3545;">*</span></label>
        <select name="prompts[${promptId}][ai_provider]" required>
          <option value="">Select Provider</option>
          ${availableProviders.map(provider => 
            `<option value="${provider}" ${promptData.ai_provider === provider ? 'selected' : ''}>${provider.toUpperCase()}</option>`
          ).join('')}
        </select>
      </div>
      <div class="prompt-form-group">
        <label>Temperature</label>
        <input type="number" name="prompts[${promptId}][temperature]" 
               value="${promptData.temperature || '0.7'}" 
               min="0" max="2" step="0.1"
               placeholder="0.7">
      </div>
    </div>
    
    <div class="prompt-form-row">
      <div class="prompt-form-group">
        <label>Description</label>
        <input type="text" name="prompts[${promptId}][description]" 
               value="${promptData.description || ''}" 
               placeholder="Brief description of this prompt">
      </div>
      <div class="prompt-form-group">
        <label>Max Tokens</label>
        <input type="number" name="prompts[${promptId}][max_tokens]" 
               value="${promptData.max_tokens || '2000'}" 
               min="100" max="8000"
               placeholder="2000">
      </div>
      <div class="prompt-form-group">
        <label>Status</label>
        <select name="prompts[${promptId}][is_active]">
          <option value="true" ${promptData.is_active !== false ? 'selected' : ''}>Active</option>
          <option value="false" ${promptData.is_active === false ? 'selected' : ''}>Inactive</option>
        </select>
      </div>
    </div>
    
    <div class="prompt-textarea-group">
      <div class="prompt-textarea-row">
        <div class="prompt-form-group">
          <label>User Prompt <span style="color: #dc3545;">*</span></label>
          <textarea name="prompts[${promptId}][prompt_text]" 
                    placeholder="Enter the main prompt that will be sent to the AI..." 
                    required>${promptData.prompt_text || ''}</textarea>
        </div>
        <div class="prompt-form-group">
          <label>System Message</label>
          <textarea name="prompts[${promptId}][system_message]" 
                    placeholder="Enter system instructions for the AI...">${promptData.system_message || ''}</textarea>
        </div>
      </div>
    </div>
  `;
  
  return card;
}

function addPromptCard() {
  const container = document.getElementById('prompts-container');
  const newCard = createPromptCard();
  container.appendChild(newCard);
}

function removePromptCard(button) {
  const card = button.closest('.prompt-card');
  card.remove();
}

// Add prompt button event listener
document.getElementById('add-prompt-btn').addEventListener('click', addPromptCard);

// Show/hide AI prompts section based on "Requires AI" checkbox
const requiresAiCheckbox = document.getElementById('requires_ai');
const aiPromptsSection = document.getElementById('ai-prompts-section');

function toggleAiPromptsSection() {
  if (requiresAiCheckbox.checked) {
    aiPromptsSection.style.display = 'block';
    // Add at least one prompt card if none exist
    if (document.querySelectorAll('.prompt-card').length === 0) {
      addPromptCard();
    }
  } else {
    aiPromptsSection.style.display = 'none';
  }
}

requiresAiCheckbox.addEventListener('change', toggleAiPromptsSection);

// Initialize on page load
toggleAiPromptsSection();
</script>