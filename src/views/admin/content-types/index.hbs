<div class="admin-content-types">
  <div class="page-header">
    <div class="header-left">
      <h1>üìù Content Types Management</h1>
      <p class="subtitle">Configure content types and AI prompts</p>
    </div>
    <div class="header-right">
      <a href="/admin/content-types/new" class="btn btn-primary">
        <span>‚ûï</span> Add Content Type
      </a>
    </div>
  </div>

  <div class="filters-section">
    <form method="GET" class="filters-form">
      <div class="filter-group">
        <input type="text" name="search" placeholder="Search content types..." 
               value="{{search}}" class="filter-input">
      </div>
      <div class="filter-group">
        <select name="status" class="filter-select">
          <option value="active" {{#if (eq status 'active')}}selected{{/if}}>Active Only</option>
          <option value="inactive" {{#if (eq status 'inactive')}}selected{{/if}}>Inactive Only</option>
          <option value="all">All Status</option>
        </select>
      </div>
      <button type="submit" class="btn btn-secondary">üîç Filter</button>
    </form>
  </div>

  <div class="content-types-grid">
    {{#each contentTypes}}
    <div class="content-type-card {{#unless is_active}}inactive{{/unless}}">
      <div class="card-header">
        <div class="type-info">
          <span class="type-icon">{{icon}}</span>
          <div class="type-details">
            <h3>{{label}}</h3>
            <code class="type-key">{{key}}</code>
          </div>
        </div>
        <div class="type-status">
          {{#if is_active}}
            <span class="status-badge active">‚úÖ Active</span>
          {{else}}
            <span class="status-badge inactive">‚≠ï Inactive</span>
          {{/if}}
        </div>
      </div>

      <div class="card-body">
        {{#if description}}
          <p class="description">{{description}}</p>
        {{else}}
          <p class="description no-desc">No description provided</p>
        {{/if}}

        <div class="meta-info">
          <div class="meta-item">
            <span class="label">Display Order:</span>
            <span class="value">{{display_order}}</span>
          </div>
          <div class="meta-item">
            <span class="label">Requires AI:</span>
            <span class="value">{{#if requires_ai}}Yes{{else}}No{{/if}}</span>
          </div>
          <div class="meta-item">
            <span class="label">Has URL Field:</span>
            <span class="value">{{#if has_url_field}}Yes{{else}}No{{/if}}</span>
          </div>
        </div>

        <div class="prompt-info">
          {{#with (lookup ../promptCounts key)}}
            <span class="prompt-count">
              ü§ñ {{count}} AI Prompt(s)
            </span>
            <div class="providers">
              {{#each providers}}
                <span class="provider-tag">{{this}}</span>
              {{/each}}
            </div>
          {{else}}
            <span class="prompt-count no-prompts">
              ü§ñ 0 AI Prompt(s)
            </span>
            <div class="providers">
              <span class="provider-tag no-prompts">No prompts</span>
            </div>
          {{/with}}
        </div>
      </div>

      <div class="card-actions">
        <a href="/admin/content-types/{{id}}" class="btn btn-sm btn-outline">
          üëÅÔ∏è View
        </a>
        <a href="/admin/content-types/{{id}}/edit" class="btn btn-sm btn-outline">
          ‚úèÔ∏è Edit
        </a>
        <a href="/admin/content-types/{{id}}/prompts" class="btn btn-sm btn-primary">
          ü§ñ Manage Prompts
        </a>
      </div>
    </div>
    {{/each}}

    {{#unless contentTypes.length}}
      <div class="empty-state">
        <div class="empty-icon">üìù</div>
        <h3>No content types found</h3>
        <p>{{#if search}}Try adjusting your search criteria{{else}}Get started by creating your first content type{{/if}}</p>
        {{#unless search}}
          <a href="/admin/content-types/new" class="btn btn-primary">
            ‚ûï Create First Content Type
          </a>
        {{/unless}}
      </div>
    {{/unless}}
  </div>

  {{#if (gt contentTypes.length 0)}}
    <div class="pagination-info">
      <p>Showing {{contentTypes.length}} content type(s)</p>
    </div>
  {{/if}}
</div>

