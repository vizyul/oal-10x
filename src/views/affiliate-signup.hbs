<script>
// Commission calculator with pricing map
const pricingMap = {
    monthly: { 39: 39, 69: 69, 129: 129, 399: 399 },
    yearly: { 39: 399, 69: 699, 129: 1290, 399: 3990 }
};

// Add event listeners
document.getElementById('referrals')?.addEventListener('input', updateCalculator);
document.getElementById('plan')?.addEventListener('change', updateCalculator);
document.getElementById('billingCycle')?.addEventListener('change', updateCalculator);

function updateCalculator() {
    const referrals = parseInt(document.getElementById('referrals').value) || 0;
    const planMonthly = parseFloat(document.getElementById('plan').value) || 0;
    const billingCycle = document.getElementById('billingCycle').value;
    const commissionRate = 0.20; // 20%

    // Get the actual price based on billing cycle
    const actualPrice = pricingMap[billingCycle][planMonthly];

    // Calculate commission per referral
    const perReferralCommission = actualPrice * commissionRate;

    // Calculate earnings based on billing cycle
    let monthlyEarnings, annualEarnings;

    if (billingCycle === 'monthly') {
        // Monthly subscriptions: recurring monthly
        monthlyEarnings = referrals * perReferralCommission;
        annualEarnings = monthlyEarnings * 12;
    } else {
        // Yearly subscriptions: one-time annual payment
        const yearlyCommission = referrals * perReferralCommission;
        monthlyEarnings = yearlyCommission / 12; // Amortized monthly
        annualEarnings = yearlyCommission;
    }

    // Update display
    document.getElementById('perReferralEarnings').textContent = `$${perReferralCommission.toFixed(2)}${billingCycle === 'yearly' ? '/year' : '/month'}`;
    document.getElementById('monthlyEarnings').textContent = `$${monthlyEarnings.toFixed(2)}`;
    document.getElementById('annualEarnings').textContent = `$${annualEarnings.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
}

// Initialize calculator on page load
updateCalculator();

// Form submission
document.getElementById('affiliateSignupForm')?.addEventListener('submit', async function(e) {
    e.preventDefault();

    const submitBtn = document.getElementById('submitBtn');
    const formMessage = document.getElementById('formMessage');

    submitBtn.disabled = true;
    submitBtn.textContent = 'Submitting...';
    formMessage.style.display = 'none';

    const formData = {
        why: document.getElementById('why').value,
        website: document.getElementById('website').value,
        audienceSize: document.getElementById('audience_size').value
    };

    try {
        const response = await fetch('/affiliate/api/signup', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(formData)
        });

        const data = await response.json();

        if (response.ok && data.success) {
            formMessage.textContent = 'Success! Redirecting to your dashboard...';
            formMessage.className = 'form-message success';
            formMessage.style.display = 'block';

            // Redirect immediately
            window.location.href = '/affiliate/dashboard';
        } else {
            // Handle error response - check for both 'error' and 'message' properties
            throw new Error(data.error || data.message || 'Failed to sign up');
        }
    } catch (error) {
        formMessage.textContent = error.message || 'An error occurred. Please try again.';
        formMessage.className = 'form-message error';
        formMessage.style.display = 'block';

        submitBtn.disabled = false;
        submitBtn.textContent = 'Join Affiliate Program';
    }
});
</script>
